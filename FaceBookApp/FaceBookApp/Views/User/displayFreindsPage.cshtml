@model  FaceBookApp.ViewModels.UserFreindsViewModel

@{
    ViewBag.Title = "displayFreindsPage";
}




@Html.Partial("_NavBar", Model.user)
@Html.Partial("_SideBar", Model.user)


<h2>My Friends</h2>



<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.friends)
        {
        <tr>

            <td>@x.userFirstName</td>
            <td>@x.userLastName</td>
            <td>@x.userCountry</td>
            <td>@x.userCity</td>
            <td>@Html.ActionLink("displayFriendsProfileDetails", "displayfriendProfilePosts", "User", new { friend_id = x.userId }, null)</td>
        </tr>
        }

    </tbody>
</table>

