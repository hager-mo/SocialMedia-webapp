
@{
    ViewBag.Title = "createAccount";
}

@model FaceBookApp.Models.User

<h2>Create Account</h2>

@using (Html.BeginForm("saveAccount", "User"))
{

    <div class="form-group">
        @Html.LabelFor(l => l.userFirstName)
        @Html.TextBoxFor(l => l.userFirstName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userLastName)
        @Html.TextBoxFor(l => l.userLastName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userCountry)
        @Html.TextBoxFor(l => l.userCountry, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userCity)
        @Html.TextBoxFor(l => l.userCity, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userMobileNumber)
        @Html.TextBoxFor(l => l.userMobileNumber, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userEmail)
        @Html.TextBoxFor(l => l.userEmail, new { @class = "form-control", @Type="email", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userPassword)
        @Html.TextBoxFor(l => l.userPassword, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userProfileImage)
        @Html.TextBoxFor(l =>l.userProfileImage, new { @class = "form-control", @type="file"})
    </div>

    <button type="submit" class="btn btn-success">Create Account</button>
    <button type="reset" class="btn btn-danger">Reset</button>



}

