@{
    ViewBag.Title = "displayAccountSettings";
}

@model FaceBookApp.Models.User
@Html.Partial("_NavBar", Model)
@Html.Partial("_SideBar", Model)

<h2>Settings</h2>

@using (Html.BeginForm("editAccount", "User"))
{

    <div class="id_hide">
        @Html.LabelFor(l => l.userId)
        @Html.TextBoxFor(l => l.userId)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.userFirstName)
        @Html.TextBoxFor(l => l.userFirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userLastName)
        @Html.TextBoxFor(l => l.userLastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userCountry)
        @Html.TextBoxFor(l => l.userCountry, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userCity)
        @Html.TextBoxFor(l => l.userCity, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userMobileNumber)
        @Html.TextBoxFor(l => l.userMobileNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userEmail)
        @Html.TextBoxFor(l => l.userEmail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userPassword)
        @Html.TextBoxFor(l => l.userPassword, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(l => l.userProfileImage)
        @Html.TextBoxFor(l => l.userProfileImage, new { @class = "form-control", @type = "file" })
    </div>

    <button type="submit" class="btn btn-success">Edit Info</button>




}
<style>
    .id_hide {
        display: none;
    }
</style>